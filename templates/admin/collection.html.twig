{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
<div class="cont">
    <div class="header">
        <h1 class="title-center-h1">Administration</h1>
        <div class="header-btn">
            <a href="{{ url('add_album') }}" class="btn btn-primary">Ajouter une collection</a>
        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="{{ url('admin_user') }}">Les utilisateurs</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="{{ url('admin_collection') }}">Les collections</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="{{ url('admin_item') }}">Les items</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="{{ url('admin_comment') }}">Les avis</a>
        </li>
    </ul>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Items</th>
                <th>Nombre d'ajout</th>
                <th>Date de création</th>
                <th>Action</th>
            </tr>
        </thead>
        {% if collections %}
            <tbody>
            {% set i = 0 %}
            {% for collection in collections %}
                <tr>
                    <td>{{ collection[0] }}</td>
                    <td>{{ collection[1] }}</td>
                    <td>{{ collection[2] }}</td>
                    <td>{{ collection[3] }}</td>
                    <td>{{ collection[4]|date("m/d/Y") }}</td>
                    <td class="table-action">
                        <a href="{{ path('show_album', {'id': collection[0]}) }}" title="Voir une collection">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="{{ path('add_item', {'album_id': collection[0]}) }}" title="Ajouter un item">
                            <i class="fas fa-plus"></i>
                        </a>
                        <a href="{{ path('edit_album', {'id': collection[0]}) }}" title="Modifier une collection">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="{{ path('delete_album', {'id': collection[0]}) }}" title="Supprimer une collection">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        {% else %}
        </table>
        <h4 class="admin-no-result">Aucun résultat</h4>
        {% endif %}
    </table>
</div>
{% endblock %}