{% extends 'base.html.twig' %}

{% block title %}Ajouter une collection{% endblock %}

{% block body %}
<div class="cont">
    <h1 class="title-h1 title-center">Ajouter une collection</h1>
    <div class="form">
        {{ form_start(add_album_form) }}
            <div class="form-group">
                {{ form_row(add_album_form.name) }}
            </div>
            <div class="form-group">
                {{ form_row(add_album_form.description) }}
            </div>
            <div class="form-submit">
                {{ form_row(add_album_form.submit) }}
            </div>
        {{ form_end(add_album_form) }}
    </div>
</div>
{% endblock %}