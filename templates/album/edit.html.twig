{% extends 'base.html.twig' %}

{% block title %}Modifier ma collection{% endblock %}

{% block body %}
<div class="cont">
    <h1 class="title-h1 title-center">Modifier la collection</h1>
    <div class="form">
        {{ form_start(edit_album_form) }}
            <div class="form-group">
                {{ form_row(edit_album_form.name) }}
            </div>
            <div class="form-group">
                {{ form_row(edit_album_form.description) }}
            </div>
            <div class="form-submit">
                {{ form_row(edit_album_form.submit) }}
            </div>
        {{ form_end(edit_album_form) }}
    </div>
</div>
{% endblock %}