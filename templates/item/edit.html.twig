{% extends 'base.html.twig' %}

{% block title %}Modifier mon item{% endblock %}

{% block body %}
<div class="cont">
    <h1 class="title-h1 title-center">Modifier mon item</h1>
    <div class="form">
        {{ form_start(edit_item_form) }}
            <div class="form-group">
                {{ form_row(edit_item_form.name) }}
            </div>
            <div class="form-group">
                {{ form_row(edit_item_form.description) }}
            </div>
            <div class="form-submit">
                {{ form_row(edit_item_form.submit) }}
            </div>
        {{ form_end(edit_item_form) }}
    </div>
</div>
{% endblock %}