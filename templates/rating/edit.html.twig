{% extends 'base.html.twig' %}

{% block title %}Modifier votre avis sur {{ item.name }}{% endblock %}

{% block body %}
<div class="cont">
    <h1 class="title-h1 title-center">Modifier votre avis sur {{ item.name }}</h1>
    <div class="form">
        {{ form_start(edit_rating_form) }}
            <div class="form-group">
                {{ form_row(edit_rating_form.rate) }}
            </div>
            <div class="form-submit">
                {{ form_row(edit_rating_form.submit) }}
            </div>
        {{ form_end(edit_rating_form) }}
    </div>
</div>
{% endblock %}